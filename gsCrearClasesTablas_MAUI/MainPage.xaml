<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gsCrearClasesTablas_MAUI.MainPage"
             Appearing="ContentPage_Appearing">
    <ContentPage.Resources>
        <Style TargetType="{x:Type Frame}">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BorderColor" Value="{StaticResource ColorGrisNegro}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark={StaticResource ColorGrisNegro}}"/>
        </Style>
        <Style TargetType="{x:Type Picker}" >
            <Setter Property="FontAttributes" Value="None" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="VerticalOptions"  Value="Start" />
            <Setter Property="TitleColor" Value="{AppThemeBinding Light=SteelBlue, Dark=White}"/>
            <!--<Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>-->
            <!--<Setter Property="BackgroundColor" Value="{AppThemeBinding Light=Transparent, Dark=SteelBlue}"/>-->
            <Setter Property="TextColor" Value="SteelBlue"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="HeightRequest" Value="35"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Shadow" Value="True" />
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="HeightRequest" Value="35"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="Color" Value="{OnPlatform Android={StaticResource SwitchAndroid}, iOS={StaticResource SwitchiOS}, UWP={StaticResource CheckUWP}}"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Style.Triggers>
                <Trigger TargetType="CheckBox"
                         Property="IsEnabled"
                         Value="False">
                    <Setter Property="Color" Value="{StaticResource GrisDeshabilitado}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Entry}" ApplyToDerivedTypes="True" CanCascade="True">
            <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
            <Setter Property="ReturnType" Value="Next"/>
            <Setter Property="HeightRequest" Value="35"/>
            <!--<Setter Property="FontSize" Value="{OnIdiom Phone=Small, Tablet=Small, Default=Micro}"/>-->
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontAttributes" Value="None" />
            <Setter Property="HorizontalOptions" Value="Fill"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ColorAzul1},Dark={StaticResource ColorBlanco}}"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=Transparent, Dark=#202020}"/>
            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=LightGray,Dark=Gainsboro}"/>
            <Style.Triggers>
                <Trigger TargetType="Entry" Property="IsEnabled" Value="False">
                    <Setter Property="FontAttributes" Value="Italic"/>
                </Trigger>
                <Trigger TargetType="Entry" Property="IsEnabled" Value="True">
                    <Setter Property="FontAttributes" Value="None"/>
                </Trigger>
                <Trigger TargetType="Entry" Property="IsReadOnly" Value="True">
                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource IWBackReadOnly1Light}, Dark={StaticResource IWBackReadOnly1Dark}}" />
                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource IWTextReadOnly1Light},Dark={StaticResource IWTextReadOnly1Dark}}"/>
                    <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=LightGray,Dark=Gainsboro}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="EntryText" TargetType="{x:Type Entry}">
            <Setter Property="Keyboard" Value="Text"/>
            <Setter Property="WidthRequest" Value="150"/>
        </Style>
        <Style TargetType="{x:Type Label}" ApplyToDerivedTypes="True" CanCascade="True">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ColorAzul1},Dark={StaticResource ColorBlanco}}"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <!--<Setter Property="WidthRequest" Value="150"/>-->
            <Setter Property="FontAttributes" Value="None" />
            <!--<Setter Property="FontSize" Value="{OnIdiom Phone=Small, Tablet=Small, Default=Micro}"/>-->
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalOptions" Value="Start" />
        </Style>
        <Style TargetType="{x:Type Button}" ApplyToDerivedTypes="True" CanCascade="True">
            <!--<Setter Property="FontSize" Value="{OnIdiom Phone=Small, Tablet=Small, Default=Micro}"/>-->
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextColor" Value="{StaticResource ColorBlanco}"/>
            <Setter Property="BackgroundColor" Value="{StaticResource ColorAzul3}"/>
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="HorizontalOptions" Value="Start"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="BorderColor" Value="{StaticResource ColorGris32}"/>
            <Setter Property="BorderWidth" Value="1"/>
            <Style.Triggers>
                <Trigger TargetType="Button" Property="IsEnabled" Value="True" >
                    <Setter Property="TextColor" Value="White" />
                </Trigger>
                <Trigger TargetType="Button" Property="IsEnabled" Value="False" >
                    <Setter Property="TextColor" Value="{StaticResource ColorGrisNegro}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="StackConMargen" TargetType="{x:Type StackLayout}">
            <!--<Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="VerticalOptions" Value="EndAndExpand"/>-->
            <Setter Property="Spacing" Value="8"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView Margin="0" Padding="4" Orientation="Both">
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <StackLayout BackgroundColor="{StaticResource Accent}"
                         VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                <Label Text="Crear Clases de Tablas" TextColor="{StaticResource ColorAzul3}"
                       FontSize="Subtitle" FontAttributes="Bold"
                       HorizontalOptions="FillAndExpand"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
            <StackLayout Margin="20,10" Spacing="6">
                <Frame>
                    <StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <CheckBox x:Name="optSQL" IsChecked="True" IsEnabled="False"/>
                            <Label Text="Usar Base de datos de SQL Server"/>
                        </StackLayout>
                        <StackLayout Orientation="{OnIdiom Phone=Vertical, Default=Horizontal}" Style="{StaticResource StackConMargen}">
                            <Label Text="Data source:" WidthRequest="100"/>
                            <Entry x:Name="txtDataSource" Style="{StaticResource EntryText}" WidthRequest="400"/>
                        </StackLayout>
                        <StackLayout Orientation="{OnIdiom Phone=Vertical, Default=Horizontal}" Style="{StaticResource StackConMargen}">
                            <Label Text="Initial catalog:" WidthRequest="100"/>
                            <Entry x:Name="txtInitialCatalog" Style="{StaticResource EntryText}" WidthRequest="400"/>
                        </StackLayout>
                        <StackLayout Style="{StaticResource StackConMargen}">
                            <StackLayout Orientation="Horizontal">
                                <CheckBox x:Name="chkSeguridadSQL"/>
                                <Label Text="Usar seguridad de SQL, sino la seguridad integrada (Integrated Security)"></Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Spacing="12" Margin="12,0,0,0">
                                <StackLayout Spacing="8">
                                    <Label Text="User id:"/>
                                    <Entry x:Name="txtUserId" Style="{StaticResource EntryText}"/>
                                </StackLayout>
                                <StackLayout Spacing="8">
                                    <Label Text="Password:"/>
                                    <Entry x:Name="txtPassword" IsPassword="True" Style="{StaticResource EntryText}" />
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <Frame>
                    <StackLayout Style="{StaticResource StackConMargen}">
                        <StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="StartAndExpand">
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Tablas:" WidthRequest="100"/>
                                <!-- Title="Selecciona la tabla a convertir"-->
                                <Picker x:Name="cboTablas" WidthRequest="300"
                                        SelectedIndexChanged="cboTablas_SelectedIndexChanged"/>
                            </StackLayout>
                            <Button x:Name="btnMostrarTablas" Text="Mostrar tablas"
                                    Clicked="btnMostrarTablas_Clicked"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Label Text="Cadena select:" WidthRequest="100"/>
                            <Entry x:Name="txtSelect" Style="{StaticResource EntryText}" WidthRequest="300"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Label Text="Clase:" WidthRequest="100"/>
                            <Entry x:Name="txtClase" Style="{StaticResource EntryText}" WidthRequest="200"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <Frame>
                    <StackLayout Orientation="Horizontal" Style="{StaticResource StackConMargen}">
                        <StackLayout Style="{StaticResource StackConMargen}" >
                            <StackLayout Orientation="Horizontal">
                                <CheckBox x:Name="chkUsarDataAdapter"/>
                                <Label Text="Usar DataAdpater en lugar de cmd.Execute"></Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="12,0,0,0">
                                <CheckBox x:Name="chkUsarCommandBuilder"/>
                                <Label Text="Usar CommandBuilder"></Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <CheckBox x:Name="chkUsarAddWithValue"/>
                                <Label Text="Usar AddWithValue"></Label>
                            </StackLayout>
                            <Label Text="Si se utiliza AddWithValue o Add  para añadir los valores a los parámetros del comando."
                                    FontSize="13" Margin="12,0,0,0"/>
                            <StackLayout Orientation="Horizontal">
                                <CheckBox x:Name="chkUsarOverrides"/>
                                <Label Text="Usar Overrides los métodos Actualizar, Crear y Borrar."></Label>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Style="{StaticResource StackConMargen}">
                            <StackLayout x:Name="Panel1" Orientation="Horizontal">
                                <Label Text="Lenguaje:"/>
                                <StackLayout Orientation="Horizontal" Margin="12,0,0,0">
                                    <Label Text="Visual Basic "/>
                                    <Switch x:Name="optVB" IsToggled="True" Margin="12,0,0,0">
                                        <Switch.Triggers>
                                            <DataTrigger TargetType="Switch"
                                                         Binding="{Binding Source={x:Reference optCS}, Path=IsToggled}"
                                                         Value="False">
                                                <Setter Property="IsToggled" Value="True" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Switch"
                                                         Binding="{Binding Source={x:Reference optCS}, Path=IsToggled}"
                                                         Value="True">
                                                <Setter Property="IsToggled" Value="False" />
                                            </DataTrigger>
                                        </Switch.Triggers>
                                    </Switch>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Margin="0">
                                    <Label Text="C# " />
                                    <Switch x:Name="optCS" Margin="12,0,0,0">
                                        <Switch.Triggers>
                                            <DataTrigger TargetType="Switch"
                                                         Binding="{Binding Source={x:Reference optVB}, Path=IsToggled}"
                                                         Value="False">
                                                <Setter Property="IsToggled" Value="True" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Switch"
                                                         Binding="{Binding Source={x:Reference optVB}, Path=IsToggled}"
                                                         Value="True">
                                                <Setter Property="IsToggled" Value="False" />
                                            </DataTrigger>
                                        </Switch.Triggers>
                                    </Switch>
                                </StackLayout>
                            </StackLayout>
                            <Button x:Name="btnGenerarClase" Text="Generar Clase"
                                    HorizontalOptions="FillAndExpand"
                                    Clicked="btnGenerarClase_Clicked"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <StackLayout Style="{StaticResource StackConMargen}" Margin="8">
                    <Label FontSize="13" Text="Código generado:"/>
                    <Editor x:Name="txtCodigo" FontFamily="Consolas" FontSize="14"
                            HeightRequest="500"/>
                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand"
                         Margin="6">
                <StackLayout Orientation="Horizontal" Margin="6,0,12,0">
                    <Label x:Name="LabelInfo" HorizontalOptions="StartAndExpand"
                           WidthRequest="500" FontSize="13"
                           Text="©Guillermo Som (elGuille), 2004-2007, 2018-2022"/>
                    <Label x:Name="LabelVersion" HorizontalOptions="EndAndExpand"
                           HorizontalTextAlignment="End"
                           WidthRequest="300" FontSize="13"
                           Text="v3.0.3 (3.0.3.0)"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
