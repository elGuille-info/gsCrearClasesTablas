        <Style TargetType="{x:Type Frame}">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BorderColor" Value="{StaticResource ColorGrisNegro}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark={StaticResource ColorGrisNegro}}"/>
        </Style>
        <Style TargetType="{x:Type Picker}" >
            <Setter Property="FontAttributes" Value="None" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="VerticalOptions"  Value="Start" />
            <Setter Property="TitleColor" Value="{AppThemeBinding Light=SteelBlue, Dark=White}"/>
            <!--<Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>-->
            <!--<Setter Property="BackgroundColor" Value="{AppThemeBinding Light=Transparent, Dark=SteelBlue}"/>-->
            <Setter Property="TextColor" Value="SteelBlue"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="HeightRequest" Value="35"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Shadow" Value="True" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="HeightRequest" Value="35"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <!--<Setter Property="IsEnabled" Value="True"/>-->
            <!--<Setter Property="Color" Value="{OnPlatform Android={StaticResource SwitchAndroid}, iOS={StaticResource SwitchiOS}, WinUI={StaticResource CheckUWP}}"/>-->
            <Setter Property="VerticalOptions" Value="Center"/>
            <Style.Triggers>
                <Trigger TargetType="CheckBox"
                         Property="IsEnabled"
                         Value="True">
                    <Setter Property="Color" Value="{OnPlatform Android={StaticResource SwitchAndroid}, iOS={StaticResource SwitchiOS}, WinUI={StaticResource CheckUWP}}"/>
                </Trigger>
                <Trigger TargetType="CheckBox"
                         Property="IsEnabled"
                         Value="False">
                    <Setter Property="Color" Value="{StaticResource GrisDeshabilitado}" />
                </Trigger>
            </Style.Triggers>
        </Style>
