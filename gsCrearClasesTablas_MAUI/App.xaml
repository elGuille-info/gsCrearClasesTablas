        <Style TargetType="{x:Type Entry}" ApplyToDerivedTypes="True" CanCascade="True">
            <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
            <Setter Property="ReturnType" Value="Next"/>
            <Setter Property="HeightRequest" Value="35"/>
            <!--<Setter Property="FontSize" Value="{OnIdiom Phone=Small, Tablet=Small, Default=Micro}"/>-->
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontAttributes" Value="None" />
            <Setter Property="HorizontalOptions" Value="Fill"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ColorAzul1},Dark={StaticResource ColorBlanco}}"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=Transparent, Dark=#202020}"/>
            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=LightGray,Dark=Gainsboro}"/>
            <Style.Triggers>
                <Trigger TargetType="Entry" Property="IsEnabled" Value="False">
                    <Setter Property="FontAttributes" Value="Italic"/>
                </Trigger>
                <Trigger TargetType="Entry" Property="IsEnabled" Value="True">
                    <Setter Property="FontAttributes" Value="None"/>
                </Trigger>
                <Trigger TargetType="Entry" Property="IsReadOnly" Value="True">
                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource IWBackReadOnly1Light}, Dark={StaticResource IWBackReadOnly1Dark}}" />
                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource IWTextReadOnly1Light},Dark={StaticResource IWTextReadOnly1Dark}}"/>
                    <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=LightGray,Dark=Gainsboro}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="EntryText" TargetType="{x:Type Entry}">
            <Setter Property="Keyboard" Value="Text"/>
            <Setter Property="WidthRequest" Value="150"/>
        </Style>
        <Style TargetType="{x:Type Label}" ApplyToDerivedTypes="True" CanCascade="True">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ColorAzul1},Dark={StaticResource ColorBlanco}}"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <!--<Setter Property="WidthRequest" Value="150"/>-->
            <Setter Property="FontAttributes" Value="None" />
            <!--<Setter Property="FontSize" Value="{OnIdiom Phone=Small, Tablet=Small, Default=Micro}"/>-->
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalOptions" Value="Start" />
            <Style.Triggers>
                <Trigger TargetType="Label"
                         Property="IsEnabled"
                         Value="False">
                    <Setter Property="TextColor" Value="{StaticResource GrisDeshabilitado}" />
                    <Setter Property="FontAttributes"  Value="Italic" />
                </Trigger>
                <Trigger TargetType="Label"
                         Property="IsEnabled"
                         Value="True">
                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ColorAzul1},Dark={StaticResource ColorBlanco}}"/>
                    <Setter Property="FontAttributes"  Value="None" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" ApplyToDerivedTypes="True" CanCascade="True">
            <!--<Setter Property="FontSize" Value="{OnIdiom Phone=Small, Tablet=Small, Default=Micro}"/>-->
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextColor" Value="{StaticResource ColorBlanco}"/>
            <Setter Property="BackgroundColor" Value="{StaticResource ColorAzul3}"/>
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="HorizontalOptions" Value="Start"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="BorderColor" Value="{StaticResource ColorGris32}"/>
            <Setter Property="BorderWidth" Value="1"/>
            <Style.Triggers>
                <Trigger TargetType="Button" Property="IsEnabled" Value="True" >
                    <Setter Property="TextColor" Value="White" />
                </Trigger>
                <Trigger TargetType="Button" Property="IsEnabled" Value="False" >
                    <Setter Property="TextColor" Value="{StaticResource ColorGrisNegro}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="StackConMargen" TargetType="{x:Type StackLayout}">
            <!--<Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="VerticalOptions" Value="EndAndExpand"/>-->
            <Setter Property="Spacing" Value="8"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

